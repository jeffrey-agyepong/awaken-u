---
import Layout from '../layouts/Layout.astro';
// import doncarty from '.../public/doncarty.webp';
import Card from '../components/Card.astro';
---

<Layout title="Awaken U">
	<main class="bg-center bg-no-repeat bg-[url('/public/banner3.jpg')] bg-gray-700 bg-blend-multiply parallax">

		<section>
		  <div class="container flow">
			<div class="hero__content flow sm:flex">
				<div class="container">
					<h2 class=" text-white max-w-24ch mb-4 mt-16 text-4xl font-bold tracking-tight leading-none md:text-5xl lg:text-6xl dark:text-white text-left capitalize">
						Empowering You To improve 
						 The quality <br> of Your life</h2>
					  <p class="text-white font-light capitalize">The Journey to a better life with Don Carty</p>
					  
					  <div class="flex mt-4">
						<a href="#featured-articles" class="btn btn--primary text-black bg-white">Book A Call</a>
						
					  </div>
				</div>
				<div class="container">
					<img src="/doncarty.webp" alt="Don Carty" class="mx-auto rounded-3xl">
					<h2 class="text-white p-4 text-center font-bold">Donald Carty</h2>
					<h3 class="text-white font-light pb-4 text-center">
						Award Winning Writer, Author, Storyteller
					</h3>
				</div>
			</div>
		  </div>
		</section>
	
		<section class="p-10 sm:p-40">
			<div class="container bg-black grid sm:grid-cols-2 p-12 rounded-3xl">
				<div class="pt-12">
					<h2 class="text-white pb-16 capitalize text-3xl font-medium">
						A Traveler's Lament: <br>
						 the search for belonging
					</h2>
					<p class="text-white pb-8 mc">
						The liberation from the confines of the womb, where the development of becoming an independent
						force that has the power to transform the world, through the 42 rites of passage that bring 
						each to the threshold of the total transformation of the universe and then into the bowels of the Sacred.
					</p>
					<p class="text-white uppercase">
						Coming Fall of 2024
					</p>
				</div>
				<div class="med:flex items-center justify-center">
					<img src="/donaldcarty1960.webp" alt="Donald Carty 1960" class="rounded-2xl mx-auto" width="284" height="458">
				</div>
			</div>
		</section>
		
	  </main>
</Layout>

<style>
	.parallax {
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
		background-attachment: fixed;
	}
	.mc{
		max-width: 45ch;
	}
	
</style>
